<div class="m-4 container">
  <h3>Cập nhật khoá học</h3>
  <form method="POST" action="/courses/{{courses._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input
        type="text"
        value="{{courses.name}}"
        class="form-control"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả khoá học</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{courses.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        value="{{courses.videoId}}"
        class="form-control"
        id="videoId"
        name="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        type="text"
        value="{{courses.level}}"
        class="form-control"
        id="level"
        name="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>